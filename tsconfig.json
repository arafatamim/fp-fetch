{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ESNext"
    ],
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./lib",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}